{
  "name": "silverday/nexus-dropin-user",
  "description": "Security-first, framework-agnostic PHP 8.2+ drop-in user management module",
  "type": "library",
  "require": {
    "php": "^8.2",
    "ext-pdo": "*",
    "psr/log": "^3.0",
    "web-auth/webauthn-lib": "^4.8"
  },
  "autoload": {
    "psr-4": {
      "Nexus\\DropInUser\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Nexus\\DropInUser\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test:security": "bash tests/run-security-tests.sh",
    "test:security:db": "bash tests/run-security-tests-db.sh",
    "test:security:db:webauthn": "NEXUS_PASSKEY_WEBAUTHN_ENABLED=1 NEXUS_SECURITY_TEST_SCRIPT=tests/security/router_webauthn_enabled_test.sh bash tests/run-security-tests-db.sh"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
